<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang chá»§</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div style="padding: 16px">
      <h1>User list</h1>
      <table id="customers">
        <thead>
          <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Username</th>
            <th>Address</th>
            <th>Action</th>
          </tr>
        </thead>
        <% listUser.forEach((user, index) => { %>
        <tbody>
          <tr>
            <td><%=user.id %></td>
            <td><%=user.email %></td>
            <td><%=user.username %></td>
            <td><%=user.address %></td>
            <td>
              <a
                href="user/detail/<%=user.id %>"
                class="btn-action btn-action--detail"
                >Details</a
              >
              <a
                href="user/update-user-page/<%=user.id %>"
                class="btn-action btn-action--edit"
                >Edit</a
              >
              <form action="user/delete" method="post" class="form-action">
                <input
                  type="text"
                  hidden="true"
                  name="userId"
                  value="<%=user.id %>"
                />
                <button type="submit" class="btn-action btn-action--delete">
                  Delete
                </button>
              </form>
            </td>
          </tr>
        </tbody>

        <% }) %>
      </table>

      <div class="create-user-container">
        <h2>Create user</h2>
        <form method="post" action="/user/create">
          <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" />
          </div>
          <div class="input-group">
            <label for="username">Username</label>
            <input type="username" id="username" name="username" />
          </div>
          <div class="input-group">
            <label for="address">Address</label>
            <input type="address" id="address" name="address" />
          </div>

          <button type="submit" class="btn-create-user">Create user</button>
        </form>
      </div>
    </div>
  </body>
</html>

  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div style="padding: 16px">
      <div class="create-user-container">
        <h2>Update user</h2>
        <form method="post" action="/user/update-one-user/<%=infoUser.id %>">
          <div class="input-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%=infoUser.email %>"
            />
          </div>
          <div class="input-group">
            <label for="username">Username</label>
            <input
              type="username"
              id="username"
              name="username"
              value="<%=infoUser.username %>"
            />
          </div>
          <div class="input-group">
            <label for="address">Address</label>
            <input
              type="address"
              id="address"
              name="address"
              value="<%=infoUser.address %>"
            />
          </div>

          <button type="submit" class="btn-create-user">Update</button>
        </form>
      </div>
    </div>
  </body>
</html>
